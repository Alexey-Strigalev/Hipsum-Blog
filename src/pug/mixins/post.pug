mixin post(title, info, img, link="./blog-page.html")
    article.post&attributes(attributes)
        h2.post__title #{title}
        .post__info #{info}
        .post__img
            img(src="./img/posts-preview/" + img, alt= title )
        .post__content
            block
        .post__footer(class!=attributes.class)
            .post__read-more
                +button-read-more("read more", link)
            .post__share-icons
                include ./../sections/share-icons.pug